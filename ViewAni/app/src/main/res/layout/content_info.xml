<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="tw.com.januarytc.viewani.InfoActivity"
    tools:showIn="@layout/activity_info">


    <ImageView
        android:id="@+id/img_share_icon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:transitionName="@string/share_icon_1"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/text_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_share_icon"
        android:textSize="@dimen/info_name"
        android:textColor="@color/colorPrimary"
        android:transitionName="@string/share_text_1"
        tools:text="@string/title_activity_info" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_share">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5dp"
            android:text="@string/info_content"
            android:textSize="18dp" />

    </ScrollView>


</RelativeLayout>
